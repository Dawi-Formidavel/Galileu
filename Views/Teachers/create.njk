{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/Teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/332741/700x600) no-repeat"></section>
    <section class="details">
        <h3>Novo Professor</h3>

        <div class="item">
            <div>foto-perfil</div>
            <div>
                <input
                type="url"
                name="avatar_url"
                placeholder="http://">
            </div>
        </div>

        <div class="item">
            <div>Tempo de Experiência</div>
            <div>
                <input
                type="text"
                name="experiencia"
                placeholder="Tempo de Estudo">
            </div>
        </div>

        <div class="item">
            <div>Genêro</div>
            <div>
                <span><input type="radio"
                name="gender"
                value="M" checked>Masculino</span>

                <span><input type="radio"
                name="gender"
                value="F" checked>Feminino</span>
            </div>
        </div>

        <div class="item">
            <div>Escolaridade</div>
            <div>
                <input type="text"
                name="escolaridade"
                placeholder="Formacao"
            </div>
        </div>

         <div class="item">
            <div>Acompanhamento</div>
            <div>
                <input type="text"
                name="services"
                input="Aula"
            </div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>
                <input type="text"
                name="services"
                placeholder="Modalidade">
            </div>
        </div>

    </section>

</form>

{% endblock %}